---
import Logo from './Logo.astro'
import Nav from './Nav.astro'

export interface Props {
    current?: string;
    showLogo?: boolean;
}

const {current = '', showLogo = true} = Astro.props;
---
<header>
    {
        showLogo && (
            <Logo width="50" height="50"/>
        )
    }
    <Nav current={current}/>
</header>

<style>
    header {
        display: flex;
        justify-content: center;
        align-items: center;
        margin: 0 auto;
        max-width: var(--wrap);
        padding: 1em;
        width: 100%;
    }
</style>
